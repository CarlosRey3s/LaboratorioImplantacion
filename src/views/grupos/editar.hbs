<div class="container p-4">
    <div class="row justify-content-center">
        <h3>Editar Grupo</h3>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <form action="/grupos/editar/{{grupo.idgrupo}}" method="POST">
                <div class="form-group mb-3">
                    <label for="num_grupo">Número del Grupo</label>
                    <input type="text" id="num_grupo" class="form-control" name="num_grupo" 
                           value="{{grupo.num_grupo}}" placeholder="Ejemplo: A01" required />
                </div>
                <div class="form-group mb-3">
                    <label for="anio">Año</label>
                    <input type="number" id="anio" class="form-control" name="anio" 
                           value="{{grupo.anio}}" min="2000" max="2100" required />
                </div>
                <div class="form-group mb-3">
                    <label for="ciclo">Ciclo</label>
                    <input type="text" id="ciclo" class="form-control" name="ciclo" value="{{grupo.ciclo}}"
                           placeholder="Ciclo" min="1" max="3" required />
                </div>
                <div class="form-group mb-3">
                    <label for="idmateria">ID de la Materia</label>
                    <input type="number" id="idmateria" class="form-control" name="idmateria" 
                           value="{{grupo.idmateria}}" min="1" required />
                </div>
                <div class="form-group mb-3">
                    <label for="idprofesor">ID del Profesor</label>
                    <input type="number" id="idprofesor" class="form-control" name="idprofesor" 
                           value="{{grupo.idprofesor}}" min="1" required />
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Actualizar</button>
                </div>
            </form>
        </div>
    </div>
</div>
