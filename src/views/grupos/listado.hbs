<div class="container p-4">
    <div class="row justify-content-center">
        <h3>Listado de Grupos</h3>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-sm-6 text-right">
              <a href="/grupos/agregar" class="btn btn-success">Agregar Grupo</a>
        </div>
    </div>
    <div class="col-sm-12 mt-4">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>numero grupo</th>
                    <th>a√±o</th>
                    <th>ciclo</th>
                    <th>idmateria</th>
                    <th>idprofesor</th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each grupos}}
                <tr>
                    <td>{{idgrupo}}</td>
                    <td>{{num_grupo}}</td>
                    <td>{{anio}}</td>
                    <td>{{ciclo}}</td>
                    <td>{{idmateria}}</td>
                    <td>{{idprofesor}}</td>
                    <td>
                        <a href="/grupos/editar/{{idgrupo}}" class="btn btn-primary">Modificar</a>
                        <a href="/grupos/eliminar/{{idgrupo}}" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>